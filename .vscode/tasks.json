{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Rust Project",
            "type": "shell",
            "command": "cargo",
            "args": [
                "build"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "cwd": "${workspaceFolder}/dslr"
            },
            "problemMatcher": [
                "$rustc"
            ]
        },
        {
            "label": "Run Rust Project",
            "type": "shell",
            "command": "cargo",
            "args": [
                "run"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "problemMatcher": [
                "$rustc"
            ]
        }
    ]
}